{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["/*"],
      "@/icons/*": ["assets/icon/*"],
      "@/pages/*": ["app/pages/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/utils/*": ["app/utils/*"],
      "@/const/*": ["app/const/*"],
      "@/component/*": ["app/component/*"],
      "@/theme/*": ["theme/*"],
      "@/assets/*": ["assets/*"],
      "@/mocks/*": ["mocks/*"],
      "@/config/*": ["app/config/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "tscFilesIncludes": ["/@types/"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
